= link_to edit_review_path(model), class: 'summary', data: { global_id: model.to_global_id.to_param } do
  .summary__image-container
    = image_tag(product_image_url(model.primary_image, :medium), alt: model.name, class: 'summary__image') if model.primary_image.present?
  %span.summary__name= model.name
  .summary__info-container
    %span.summary__info= local_time_ago(model.updated_at)
    %span.summary__info
      - if model.approved
        = t('workarea.admin.reviews.approved')
      - else
        = t('workarea.admin.reviews.pending')
  %span.summary__type= t('workarea.admin.reviews.summary.type')
